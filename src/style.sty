fonttitle=\small\sffamily\bfseries\color{ChadBlue},
title={\bfseries\underline{\theoremmacro{\thetcbcounter}{#2}}: \,},
before upper={\tcbtitle},
#1
}

\newenvironment{theorem}[1][]{\begin{theoremBox}{#1}}{\end{theoremBox}}

